package lab01;

import java.util.Scanner;

public class Q3 {

	public static void main(String[] args) {
		long num = 0;
		int rem[], i = 0;
		
		System.out.print("Please enter an integer >= 1000: ");
		Scanner input = new Scanner(System.in);
		num = input.nextInt();
		
		input.close();
		
		while(num > 1000) {
			rem[i] = num % 1000;
			num /= 1000;
			System.out.print(rem + "\r");
		}
		System.out.print(num);

	}

}
